<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/border_gray"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtnama"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:text="nama peminjam"
        android:padding="10dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txtnamaPeminjam"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"

        android:hint="nama peminjama"
        android:padding="10dp"
        android:layout_below="@+id/txtnama"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:hint="judul buku"
        android:padding="10dp"
        android:id="@+id/txtjudul"
        android:layout_below="@+id/txtj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txttanggal"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:text="tanggal pinjam"
        android:layout_marginLeft="75dp"
        android:padding="10dp"
        android:layout_toRightOf="@+id/txtnama"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txtj"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtnamaPeminjam"
        android:text="judul buku"
        android:padding="10dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txttanggalpinjam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/txttanggal"
        android:layout_toRightOf="@+id/txtnamaPeminjam"
        android:hint="tanggal pinjam"
        android:padding="10dp"
        android:paddingLeft="80dp" />

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/btnedit"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:id="@+id/btndelete"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:layout_below="@+id/btnedit"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>