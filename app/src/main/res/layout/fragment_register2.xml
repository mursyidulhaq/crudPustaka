<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Register2Fragment">

    <TextView
        android:id="@+id/backk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2"
        android:textSize="30dp"
        android:drawableStart="@drawable/ic_back"
        android:textColor="@android:color/black"
        android:padding="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        tools:context=".view.MainFragment"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Halo $name untuk melanjutkan register silahkan isipasswoerd di bawah"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/etPasswordd"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/border_gray"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Password"
            />
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/border_gray"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:hint="Confirm Password"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinish"
            android:layout_marginTop="20dp"
            android:background="@drawable/bacground_blue"
            android:textColor="@android:color/white"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Finish"
            />



    </LinearLayout>


</RelativeLayout>